<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:backgroundTint="@color/green_primary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green_primary"
        android:padding="10dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/community_dp"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/community_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_dp"
            android:layout_alignStart="@+id/community_dp"
            android:layout_marginTop="10dp"
            android:text="@string/RVitem_name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/leave_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_dp"
            android:layout_alignEnd="@+id/community_dp"
            android:backgroundTint="@color/red_primary"
            android:layout_marginTop="5dp"
            android:minWidth="0dp"
            android:visibility="gone"
            app:icon="@drawable/ic_leave_community"
            app:iconPadding="0dp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_dp"
            android:layout_alignEnd="@+id/community_dp"
            android:backgroundTint="@color/blue_light"
            android:layout_marginTop="5dp"
            android:minWidth="0dp"
            android:visibility="visible"
            app:icon="@drawable/ic_edit"
            app:iconPadding="0dp" />

        <TextView
            android:id="@+id/community_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_name"
            android:layout_alignStart="@+id/community_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/category"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"
            android:background="@color/grey_secondary"
            android:padding="4dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>