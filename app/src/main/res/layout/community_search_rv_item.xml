<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:background="@color/green_primary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/green_primary"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/community_dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_dp"
            android:layout_alignStart="@+id/community_dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@id/community_member"
            android:text="@string/RVitem_name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/community_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_dp"
            android:layout_alignEnd="@id/community_dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_member"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/community_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_name"
            android:layout_alignStart="@+id/community_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/category"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"
            android:background="@color/grey_secondary"
            android:padding="4dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>